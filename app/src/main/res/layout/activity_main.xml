<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ivy.radiogroupnest.MainActivity"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="add"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checked="true"
                android:text="1"/>
            <RadioButton
                android:id="@+id/rb_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00bbff"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_three"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="2层-1"/>
                <RadioButton
                    android:id="@+id/rb_four"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="2层-2"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/rg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/holo_red_dark">
                <RadioButton
                    android:id="@+id/rb_content_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:checked="true"
                    android:text="2层RadioGroup-1"/>
                <RadioButton
                    android:id="@+id/rb_content_two"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="2层RadioGroup-2"/>
            </RadioGroup>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
